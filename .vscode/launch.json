{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Brokers Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "apps/brokers/test"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "DJANGO_DEBUG_LOG": "true"
            }
        },
        {
            "name": "Python: Debug Models Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "apps/data/test"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "DJANGO_DEBUG_LOG": "true"
            }
        }
    ]
}