{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug utx test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "apps/tests"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "DJANGO_DEBUG_LOG": "true"
            }
        },
        {
            "name": "Django: Batch Processing",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
              "batch_processing",
              "--sleeping_seconds=10"
            ],
            "django": true,
            "console": "integratedTerminal",
            "env": {
                "DJANGO_DEBUG_LOG": "true"
            },
            "cwd": "${workspaceFolder}"
          }
    ]
}